<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <Style x:Key="modalWindow" TargetType="{x:Type Window}">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <local:DividerConverter x:Key="dividerConverter"/>

        <local:AdderConverter x:Key="adderConverter"/>

        <local:SubstracterConverter x:Key="substracterConverter"/>

        <local:ZeroToCollapsedConverter x:Key="zeroToCollapsedConverter"/>

        <local:NullToCollapsedConverter x:Key="nullToCollapsedConverter"/>

        <local:NullToFalseConverter x:Key="nullToFalseConverter"/>

        <local:CmToMsConverter x:Key="cmToMsConverter"/>

    </Application.Resources>

</Application>
